@model IEnumerable<Tag>
@{ 
    int count = 0;
}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Product Count</th>
            <th scope="col">Status</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Tag tag in Model)
        {
            count++;
        <tr>
            <th scope="row">@count</th>
            <td>@tag.Name</td>
            @*<td>@tag.ProductTags.Count()</td>*@
            <td style="color:@(tag.IsDeleted ? "red":"green")">@(tag.IsDeleted ? "DeActive":"Active")</td>
            <td>

                <a class="btn btn-warning" asp-action="Update" asp-route-id="@tag.Id">Update</a>
                @if (tag.IsDeleted)
                {
                    <a id="restoreTag" class="btn btn-primary" asp-action="Restore" asp-route-id="@tag.Id">Restore</a>
                }
                else
                {
                    <a id="deleteTag" class="btn btn-danger" asp-action="Delete" asp-route-id="@tag.Id">Delete</a>
                }

            </td>
        </tr>
        }
    </tbody>
</table>