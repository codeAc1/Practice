
@model IEnumerable<Category>
@{ int count = (ViewBag.PageIndex - 1) * 5; }

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Product Count</th>
            <th scope="col">Status</th>
            <th scope="col">Setting</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Category category in Model)
        {
            count++;
        <tr  >
            <th scope="row">@count</th>
            <td >
                @if (category.Image!=null)
                {
                    <img src="~/assets/images/@category.Image" alt="Alternate Text" style="width:25%" />
                }
                else
                {
                    <span class="text-danger">Category Image is Empty</span>
                }

            </td>
            <td>@category.Name</td>
            <td>@category.Products.Count()</td>
            <td style="color:@(category.IsDeleted ? "red":"green")">@(category.IsDeleted ? "DeActive":"Active")</td>
            <td>

                <a class="btn btn-warning" asp-action="Update" asp-route-id="@category.Id" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Update</a>
                @if (category.IsDeleted)
                {
                    <a id="restoreTag" class="btn btn-primary" asp-action="Restore" asp-route-id="@category.Id" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Restore</a> }
                else
                {
                    <a id="deleteTag" class="btn btn-danger" asp-action="Delete" asp-route-id="@category.Id" asp-route-status="@ViewBag.Status" asp-route-page="@ViewBag.PageIndex">Delete</a>}

            </td>
        </tr>
        }
    </tbody>
</table>